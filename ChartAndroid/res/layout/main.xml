<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chart="http://schemas.android.com/apk/res/com.zoostudio.chart"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello" />

    <com.zoostudio.chart.GraphicContainer
        android:id="@+id/graphicContainer1"
        chart:chartBorderColor="#fff"
        chart:chartAnimDuration="200"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/chart"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="#ffffff"
            android:layout_weight="1" >
        </RelativeLayout>

        <ListView
            android:id="@+id/listLegend"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:cacheColorHint="#00000000" >
        </ListView>
    </com.zoostudio.chart.GraphicContainer>

</LinearLayout>